<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/horizontalScrollView"
    tools:context=".ChapterDetailFragment">

    <TextView
        android:id="@+id/chapter_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/chapter_intro"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/chapter_title"
        android:padding="16dp"
        android:layout_below="@id/chapter_intro"/>

    <View
        android:id="@+id/horizontal_rule_1"
        android:layout_gravity="center|center_horizontal"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#777"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_margin="16dp"
        android:layout_below="@id/chapter_title"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:layout_below="@id/horizontal_rule_1">

    </ListView>

    <TextView
        android:id="@+id/chapter_outtro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/chapter_outtro"
        android:padding="16dp"
        android:layout_toRightOf="@android:id/list"
        android:layout_toEndOf="@android:id/list"/>

</RelativeLayout>
